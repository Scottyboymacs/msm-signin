<div>
  <div>
    <h1>
      Director #<%= @the_director.id %> details
    </h1>

    <div>
      <div>
        <a href="/directors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_director/<%= @the_director.id %>">
          Delete director
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_director.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_director.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_director.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_director.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<p>
Filmography 

<table border="1">
<% @the_director.filmography.each do |film|%>
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <tr>
    <td>
      <%= film.id %>
    </td>

    <td>
    <img src = <%= film.image %>>
    </td>

    <td>
      <%= film.title %>
    </td>

    <td>
            <%= film.year %>
    </td>

    <td>
      <%= film.director.name %>
    </td>

    <td>
      <a href="/movies/<%=film.id%>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
</p>

<div>
  <div>
    <h2>
      Edit <%=@the_director.name%>
    </h2>

    <form action="/modify_director/<%= @the_director.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_director.name %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_director.dob %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_director.bio %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_director.image %>">
      </div>

      <button>
        Update director
      </button>
    </form>
  </div>
</div>

<hr>
