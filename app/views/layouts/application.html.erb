<!DOCTYPE html>
<html>
  <head>
    <title>MSM SIGNIN</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
  <nav>
    <ul>
      <li>
        <a href = "/user_sign_in">
         Sign in 
        </a>
      </li>
            <li>
        <a href = "/user_sign_up">
         Sign up 
        </a>
      </li>
            <li>
        <a href = "/">
         Home 
        </a>
      </li>
    </ul>
  </nav>

      <% if notice.present? %>
    <div style = "border: thin green solid; color: black">
      <%= notice %>
    </div>
    <%end%>

    <% if alert.present? %>
    <div style = "border: thin red solid; color: red">
      <%= alert %>
    </div>
    <%end%>
        <% if session[:user_id].present? %>
    <div>
      <a href = "/user_sign_out">Sign Out</a>
    </div>
    <%end%>

    <%= yield %>
  </body>
</html>
